                </div>


            </div>
        </div>
        <partial name="_RentFormDetails" model="@Model.form" />

    </div>
    @{double rateing = 0;}

  
        @if (Model.reviews.Count > 0)
        {
            rateing = Model.reviews.Average(p => p.Rating);
        }
   
    <div class="row mt-3">
        <div class="col">
            <h2 class="ml-2 mb-3">Omdömen</h2>
            @foreach (var item in Model.reviews)
            {
                <div class="card m-1 shadow bg-white rounded" style="width: 680px;">
                    <div class="card-body">

                        <h5 class="card-title">@item.UserName</h5>
                        @for (int i = 0; i < item.Rating; i++)
                        {

                        <i class=" fa fa-star"> </i>
                        } 
                        <h6 class="card-subtitle mb-2 text-muted">@item.DateCreated.ToShortDateString()</h6>
