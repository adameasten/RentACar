@model AccountLoginVM
@{
    ViewData["Title"] = "Logga In";
}

<div class="section">
    <div class="section-center">
        <div class="row">
            <form asp-controller="accounts" class="sign-in-form" asp-action="login" asp-route-returnUrl="@ViewData["returnUrl"]">
                <h3>Logga in</h3>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="is-invalid"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="is-invalid"></span>
                </div>
                <div>
                    <input type="submit" value="Logga In" class="button-default float-right" />
                </div>
            </form>
        </div>
    </div>
</div>
