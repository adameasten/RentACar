@model AccountRegisterVM
@{
    ViewData["Title"] = "Registrera dig";
}


<div class="section w-100">
    <div class="section-center justify-content-center text-center">
        <div class="row justify-content-center">
            <form asp-controller="accounts" class="register-form" asp-action="register">
                <div class="form-group w-100">
                    <h3>Registrera dig</h3>
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="is-valid"></span>
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="is-valid"></span>
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="is-valid"></span>
                        <small id="passwordHelpBlock" class="text-muted">
                        </small>
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="is-valid"></span>
                        <small id="passwordHelpBlock" class="text-muted">
                        </small>
                    </div>
                    <input type="submit" class="button-default float-right" value="Registrera" />
                    <br />
                    <br />
                <p class="small" style="width:300px; font-size:x-small;">
                    *Genom att registrera dig hos oss, accepterar du
                    våra generella villkor om persondatalagring. För mer information
                    om hur vi hanterar och lagrar dina personuppgifter, se våra villkor.
                </p>
                </div>
            </form>
        </div>
    </div>
</div>
